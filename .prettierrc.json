{
  "useTabs": false,
  "bracketSpacing": true,
  "tabWidth": 4,
  "printWidth": 100,
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false,
        "trailingComma": "none"
      }
    }
  ]
}
