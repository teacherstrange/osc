  "dependencies": {
    "header": "file:packages/header",
    "osc-academic-hub": "file:packages/osc-academic-hub"
  },
  "scripts": {
    "stylelint": "npx stylelint \"**/*.scss\" --allow-empty-input",
    "stylelint-and-fix": "npx stylelint \"**/*.scss\" --allow-empty-input --fix",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --max-warnings 0 --no-error-on-unmatched-pattern .",
    "lint-and-fix": "eslint --cache --cache-location ./node_modules/.cache/eslint --max-warnings 0 --ext .ts,.tsx, .js, .jsx --fix --no-error-on-unmatched-pattern .",
    "prettier-format": "prettier --config .prettierrc.json '*.{js,jsx,ts,tsx,json,scss}' '**/*.{js,jsx,ts,tsx,json,scss}' --write",
    "prepare": "husky install",
    "build:css": "PORT=3001 LOAD_PATH=app/styles PATH_TO_MAIN_SCSS=/app/styles/main.scss PATH_TO_DEST_MAIN_CSS=/app/styles/dest/main.css PATH_TO_COMPONENTS=/app/components node bin/postcssBuild.js",
    "build-storybook": "cross-env NODE_ENV=production npm run build:css && lerna run build:css && build-storybook",
    "storybook": "lerna run build:css && concurrently \"lerna run watch:css --parallel\" \"start-storybook -p 6006\"",
    "chromatic": "chromatic --exit-zero-on-changes",
    "build": "lerna run build",
    "test": "lerna run test",
    "test:e2e:dev": "lerna run test:e2e:dev",
    "dev": "lerna run dev",
    "setup": "lerna link convert && npm i && npx prisma generate --schema=packages/osc-academic-hub/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.scss": [
      "npm run stylelint-and-fix"
    ],
    "*.(js|ts|tsx|jsx|json|scss)": [
      "npm run prettier-format"
    ],
    "*.(js|ts|tsx/jsx)": [
      "npm run lint-and-fix"
    ]
  },
  "browserslist": [
    "last 2 versions, not dead"
  ]
}
