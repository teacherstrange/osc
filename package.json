{
  "private": true,
  "dependencies": {
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "osc-academic-hub": "file:packages/osc-academic-hub",
    "osc-api": "file:packages/osc-api",
    "osc-api-admin": "file:packages/osc-api-admin",
    "osc-api-assignments": "file:packages/osc-api-assignments",
    "osc-api-auth": "file:packages/osc-api-auth",
    "osc-api-crm": "file:packages/osc-api-crm",
    "osc-api-ecommerce": "file:packages/osc-api-ecommerce",
    "osc-api-gateway": "file:packages/osc-api-gateway",
    "osc-api-lms": "file:packages/osc-api-lms",
    "osc-ecommerce": "file:packages/osc-ecommerce",
    "osc-ui": "file:packages/osc-ui"
  },
  "scripts": {
    "prepare": "husky install",
    "stylelint": "npx stylelint \"**/*.scss\" --allow-empty-input --formatter verbose",
    "stylelint-and-fix": "npx stylelint \"**/*.scss\" --allow-empty-input --fix ",
    "lint": "DEBUG=eslint:cli-engine eslint --cache --cache-location ./node_modules/.cache/eslint  -c ./.eslintrc.js --max-warnings 0 --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern .",
    "lint-and-fix": "eslint -c ./.eslintrc.js --cache --cache-location ./node_modules/.cache/eslint  --max-warnings 0 --ext .ts,.tsx,.js,.jsx --fix --no-error-on-unmatched-pattern",
    "prettier-format": "prettier --config .prettierrc.json '*.{js,jsx,ts,tsx,json,scss}' '**/*.{js,jsx,ts,tsx,json,scss}' --write",
    "build-storybook": "cross-env NODE_ENV=production lerna run build:css && build-storybook",
    "storybook": "concurrently \"npm run dev:osc-ui --parallel\" \"start-storybook --quiet -p 6006\"",
    "chromatic": "chromatic --exit-zero-on-changes",
    "build": "lerna run build",
    "build:osc-ui": "lerna run build --scope osc-ui --skip-nx-cache",
    "build:osc-studio": "cd packages/osc-studio && npm run build",
    "build:osc-ecommerce": "lerna run build --scope osc-ecommerce --skip-nx-cache",
    "test": "npm run build:osc-ui && lerna run test",
    "test:dev": "lerna run test:dev",
    "test:dev:osc-ui": "lerna run test:dev --scope 'osc-ui'",
    "test:e2e:dev": "lerna run test:e2e:dev",
    "test:e2e:run": "lerna run build --scope osc-ui && concurrently \"lerna run dev --parallel --scope osc-ui\" \"lerna run test:e2e:run\"",
    "dev": "lerna run dev",
    "dev:osc-ui": "lerna run dev --scope 'osc-ui'  --skip-nx-cache",
    "dev:osc-ecommerce": "lerna run dev --scope '{osc-ui,osc-ecommerce}'",
    "dev:osc-academic-hub": "lerna run dev --scope '{osc-ui,osc-academic-hub}'",
    "dev:osc-studio": "cd packages/osc-studio && npm run dev",
    "dev:api": "run-p api:dev:*",
    "api:dev:osc-api-auth": "lerna run dev --scope osc-api-auth",
    "api:dev:osc-api-ecommerce": "lerna run dev --scope osc-api-ecommerce",
    "api:dev:osc-api-crm": "lerna run dev --scope osc-api-crm",
    "api:dev:osc-api-admin": "lerna run dev --scope osc-api-admin",
    "api:dev:osc-api-lms": "lerna run dev --scope osc-api-lms",
    "api:dev:osc-api-assignments": "lerna run dev --scope osc-api-assignments",
    "api:dev:osc-api-gateway": "lerna run dev --scope osc-api-gateway",
    "setup": "npm i && npx prisma generate && cd packages/osc-studio && npm i --legacy-peer-deps",
    "tokens:generate": "json-to-scss ./tokens/**/*.* ./packages/osc-ui/src/styles/settings/_tokens.scss --tn 2",
    "copy-fonts:from-ui": "lerna run copy-fonts:from-ui",
    "copy-fonts:from-remix": "lerna run copy-fonts:from-remix",
    "copy-fonts": "lerna run copy-fonts"
  },
  "lint-staged": {
    "*.scss": [
      "npm run stylelint-and-fix"
    ],
    "*.{js|ts|tsx|jsx|json|scss}": [
      "npm run prettier-format"
    ],
    "*.{ts|tsx|jsx}": [
      "npm run lint-and-fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "15.7.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/eslint": "^8.21.1",
    "chromatic": "^6.17.0",
    "concurrently": "^7.6.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "nx": "15.7.0",
    "prettier": "^2.6.2",
    "prisma": "^4.11.0",
    "storybook-addon-sass-postcss": "^0.1.3",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "typescript": "~4.8.2"
  }
}
