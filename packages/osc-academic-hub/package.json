{
  "name": "osc-academic-hub",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "scripts": {
    "addDevDeps": "node bin/addDevDeps.js",
    "setup": "prisma db seed",
    "seed": "cross-env DATABASE_URL=file:./data.db?connection_limit=1 ts-node --require tsconfig-paths/register prisma/seed.ts",
    "build": "run-s build:*",
    "build:css": "PORT=3001 LOAD_PATH=app/styles PATH_TO_MAIN_SCSS=/app/styles/main.scss PATH_TO_DEST_MAIN_CSS=/app/styles/dest/main.css PATH_TO_COMPONENTS=/app/components node bin/postcssBuild.js",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev": "cross-env NODE_ENV=development npm run build:css && run-p dev:*",
    "dev:css": "PORT=3001 LOAD_PATH=app/styles PATH_TO_MAIN_SCSS=/app/styles/main.scss PATH_TO_DEST_MAIN_CSS=/app/styles/dest/main.css node bin/postcss.js",
    "dev:remix": "cross-env PORT=3000 NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest --coverage",
    "test:dev": "vitest run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "build-storybook": "npm run build:css && lerna run build:css && build-storybook",
    "storybook": "npm run build:css && concurrently \"npm run dev:css\" \"start-storybook -p 6006\"",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.4",
    "@emotion/react": "^11.9.3",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.9.3",
    "@prisma/client": "^4.2.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "@storybook/addon-a11y": "^6.5.9",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "framer-motion": "^6.5.1",
    "isomorphic-dompurify": "^0.19.0",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^18",
    "react-dom": "^18",
    "tiny-invariant": "^1.2.0",
    "web-push": "^3.4.5"
  },
  "optionalDependencies": {
    "osc-ui": "file:packages/osc-ui"
  },
  "prisma": {
    "seed": "lerna run seed"
  },
  "browserslist": [
    "last 2 versions, not dead"
  ]
}
