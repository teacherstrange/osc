{
  "include": ["./server.ts"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "build", // Types should go into this directory.
    "declaration": false // Generate d.ts files
  }
}
