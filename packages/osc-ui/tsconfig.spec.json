{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "types": ["vitest/globals", "node"],
    "paths": {
      "test-utils": ["./__test__/test-utils"]
